<resources>
    <!-- Base application theme. -->
    <style name="HalauncherTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlHighlight">@color/light_primary_color</item>
        <item name="android:windowBackground">@color/primary_background_color</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="HalauncherTheme.Widget.TextView.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="HalauncherTheme.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HaLauncher.Widget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
